@model Abc.Northwind.MvcWebUI.Models.CartSummaryViewModel

<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">

    @foreach (var item in Model.Cart.CartLines)
    {
        <a class="dropdown-item" href="#">
            @item.Product.ProductName
            <span class="badge badge-dark">@item.Quantity</span>
        </a>
    }
    <div role="separator" class="dropdown-divider"></div>
    
    <a class="dropdown-item" href="#">
        <span class="glyphicon glyphicon-align-left glyphicon-shopping-cart"></span>@Model.Cart.Total
    </a>
    <div role="separator" class="dropdown-divider"></div>
    <a class="dropdown-item" asp-controller="Cart"
       asp-action="List">Go to cart details</a>
</div>